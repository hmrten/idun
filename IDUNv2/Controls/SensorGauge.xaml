<UserControl
    x:Class="IDUNv2.Controls.SensorGauge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IDUNv2.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="200">
    <Button Background="Black">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center"/>
            <local:Gauge
                    Minimum="{Binding RangeMin}"
                    Maximum="{Binding RangeMax}"
                    DangerLo="{Binding DangerLo}"
                    DangerHi="{Binding DangerHi}"
                    Value="{Binding Value}"
                    ValueStringFormat="{Binding ValueStringFormat}"
                    Unit="{Binding Unit}"
                    TickBrush="Transparent"
                    ScaleTickBrush="Transparent"
                    NeedleBrush="White"
                    TrailBrush="DarkSeaGreen"
                    ValueBrush="DarkSeaGreen"
                    UnitBrush="DarkGray"
                    DangerHiBrush="Red"
                    ScaleBrush="DarkSlateGray"
                    LabelY="-88"/>
        </StackPanel>
    </Button>
</UserControl>
